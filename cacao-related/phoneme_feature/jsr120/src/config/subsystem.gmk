    $(GENERATED_DIR)/classes/com/sun/tck/wma/MessageConnector.java \
    $(JSR_120_DIR)/src/tool/wmatool/classes/com/sun/tck/wma/MessageTransportConstants.java \
    $(JSR_120_DIR)/src/tool/wmatool/classes/com/sun/tck/wma/TextMessage.java \
    $(JSR_120_DIR)/src/tool/wmatool/classes/com/sun/tck/wma/PropLoader.java \
    $(JSR_120_DIR)/src/tool/wmatool/classes/com/sun/tck/wma/sms/BinaryObject.java \
    $(JSR_120_DIR)/src/tool/wmatool/classes/com/sun/tck/wma/sms/MessageObject.java \
    $(JSR_120_DIR)/src/tool/wmatool/classes/com/sun/tck/wma/sms/MessagePacket.java \
