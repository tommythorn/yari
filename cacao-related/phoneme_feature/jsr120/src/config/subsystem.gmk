    $(JSR_120_DIR)/src/protocol/sms/classes/com/sun/midp/io/j2me/sms/BinaryObject.java \
    $(JSR_120_DIR)/src/protocol/sms/classes/com/sun/midp/io/j2me/sms/Protocol.java \
    $(JSR_120_DIR)/src/protocol/sms/classes/com/sun/midp/io/j2me/sms/MessageObject.java \
    $(JSR_120_DIR)/src/protocol/sms/classes/com/sun/midp/io/j2me/sms/TextEncoder.java \
    $(JSR_120_DIR)/src/protocol/sms/classes/com/sun/midp/io/j2me/sms/TextObject.java

MODULE_JSR_120_CBS_JAVA_FILES = \
    $(JSR_120_DIR)/src/protocol/cbs/classes/com/sun/midp/io/j2me/cbs/Protocol.java \
    $(JSR_120_DIR)/src/protocol/cbs/classes/com/sun/midp/io/j2me/cbs/BinaryObject.java \
