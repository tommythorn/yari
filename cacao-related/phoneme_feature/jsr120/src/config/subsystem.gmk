    $(JSR_120_DIR)/src/tool/wmatool/classes/com/sun/tck/wma/cbs/CBSTestServer.java \
    $(JSR_120_DIR)/src/tool/wmatool/classes/com/sun/tck/wma/cbs/CBSPacket.java \
